{
  "name": "neoway-news-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "test": "jest"
  },
  "dependencies": {
    "@vue/cli-service": "~5.0.8",
    "@heroicons/vue": "^2.1.5",
    "autoprefixer": "^10.4.20",
    "axios": "^1.7.7",
    "axios-cache-interceptor": "^1.6.0",
    "core-js": "^3.8.3",
    "date-fns": "^4.1.0",
    "lodash.debounce": "^4.0.8",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.12",
    "vue": "^3.2.13",
    "vue-router": "^4.4.5",
    "vue-toastification": "^2.0.0-rc.5",
    "vuex": "^4.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/eslint-parser": "^7.25.1",
    "@vue/cli-plugin-babel": "~5.0.8",
    "@vue/cli-plugin-eslint": "~5.0.8",
    "@vue/test-utils": "^2.4.0-alpha.2",
    "@vue/vue3-jest": "^29.2.6",
    "babel-jest": "^29.0.7",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^8.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.3.3"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "@babel/eslint-parser"
    },
    "rules": {
      "vue/multi-word-component-names": "off",
      "no-extra-semi": "warn",
      "semi": [
        "warn",
        "never"
      ]
    },
    "overrides": [
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)",
          "**/tests/unit/**/*.spec.{j,t}s?(x)"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "printWidth": 120
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}
